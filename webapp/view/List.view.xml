<mvc:View
    controllerName="br.com.challenge.monitor.challengemonitor.controller.List"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:semantic="sap.f.semantic"
    xmlns:fb="sap.ui.comp.filterbar"
    xmlns:ndc="sap.ndc"
>
    <Page
        id="idPage"
        title="{i18n>PageTitle}"
    >
        <content>
            <semantic:SemanticPage
                id="idSemanticPage"
                headerExpanded="true"
                headerPinnable="true"
                preserveHeaderStateOnScroll="false"
                showFooter="false"
                titleAreaShrinkRatio="1:1.6:1.6"
                toggleHeaderOnTitleClick="true"
                class="sapUiNoContentPadding"
            >
                <semantic:titleHeading>
                    <Title
                        id="idShippingsRequestsMyTitle"
                        text="{i18n>HeadingTitle}"
                    />
                </semantic:titleHeading>
                <semantic:headerContent>
                    <fb:FilterBar
                        id="idFilterBar"
                        showClearOnFB="false"
                        persistencyKey="myPersKey"
                        useToolbar="false"
                        search="onFilterBarSearch"
                        filterChange="onFilterBarSearch"
                        showGoOnFB="true"
                    >
                        <fb:filterGroupItems>
                            <fb:FilterGroupItem
                                id="idShippingRequestFilterGroupItem"
                                label="{i18n>fgShippingRequestItem}"
                                name="ShippingRequestId"
                                labelTooltip="{fgShippingRequestIdTooltip}"
                                visibleInFilterBar="true"
                                groupTitle="{i18n>fgHeaderGroup}"
                                groupName="Principal"
                            >
                                <fb:control>
                                    <Input
                                        id="idShippingRequestItemFilter"
                                        width="100%"
                                        placeholder="{i18n>fgShippingRequestIdPlaceholder}"
                                        showValueHelp="true"
                                        valueHelpRequest=".SearchHelp.onShippingId"
                                        tooltip="{i18n>fgShippingRequestIdTooltip}"
                                    />
                                </fb:control>
                            </fb:FilterGroupItem>
                            <fb:FilterGroupItem
                                id="statusFilterItem"
                                label="{i18n>fgStatus}"
                                name="Status"
                                labelTooltip="{fgStatusTooltip}" 
                                visibleInFilterBar="true"
                                groupTitle="{i18n>fgHeaderGroup}"
                                groupName="Principal"
                            >
                                <fb:control>
                                    <MultiComboBox
                                        id="statusFilter"
                                        name="Status"
                                        selectionChange=".onSelectionChange"
                                        items="{
                                            path: '/ZRFSFBP_SH_STATUS',
                                            templateShareable: true
                                        }"
                                        placeholder="{i18n>fgStatusPlaceholder}"
                                        tooltip="{i18n>fgStatusTooltip}"
                                    >
                                        <core:Item
                                            id="idItem"
                                            key="{DomvalueL}"
                                            text="{DomvalueL} - {Ddtext}"
                                        />
                                    </MultiComboBox>
                                </fb:control>
                            </fb:FilterGroupItem>
                            <fb:FilterGroupItem
                                id="CustomerId"
                                label="{i18n>fgCustomerId}"
                                name="CustomerId"
                                labelTooltip="{fgCustomerIdTooltip}"
                                visibleInFilterBar="true"
                                groupTitle="{i18n>fgHeaderGroup}"
                                groupName="Principal"
                            >
                                <fb:control>
                                    <Input
                                        id="customerIdFilter"
                                        width="100%"
                                        placeholder="{i18n>fgCustomerIdPlaceholder}"
                                        showValueHelp="true"
                                        valueHelpRequest=".SearchHelp.onCustomerId"
                                        tooltip="{i18n>fgCustomerIdTooltip}"
                                    />
                                </fb:control>
                            </fb:FilterGroupItem>
                            <fb:FilterGroupItem
                                id="plantOrigin"
                                label="{i18n>fgPlantOrigin}"
                                name="PlantOrigin"
                                labelTooltip="{fgPlantOriginTooltip}"
                                visibleInFilterBar="true"
                                groupTitle="{i18n>fgHeaderGroup}"
                                groupName="Principal"
                            >
                                <fb:control>
                                    <Input
                                        id="plantOriginFilter"
                                        width="100%"
                                        placeholder="{i18n>fgPlantOriginPlaceholder}"
                                        showValueHelp="true"
                                        valueHelpRequest=".SearchHelp.onPlant"
                                        tooltip="{i18n>fgPlantOriginTooltip}"
                                    />
                                </fb:control>
                            </fb:FilterGroupItem>
                            <fb:FilterGroupItem
                                id="createdBy"
                                label="{i18n>fgCreatedBy}"
                                name="CreatedBy"
                                labelTooltip="{fgCreatedByTooltip}"
                                visibleInFilterBar="false"
                                groupTitle="{i18n>fgHeaderGroup}"
                                groupName="Principal"
                            >
                                <fb:control>
                                    <Input
                                        id="createdByFilter"
                                        width="100%"
                                        placeholder="{i18n>fgCreatedByPlaceholder}"
                                        showValueHelp="true"
                                        valueHelpRequest=".SearchHelp.onUser"
                                        tooltip="{i18n>fgCreatedByTooltip}"
                                    />
                                </fb:control>
                            </fb:FilterGroupItem>
                        </fb:filterGroupItems>
                    </fb:FilterBar>
                </semantic:headerContent>
                <semantic:content>
                    <ScrollContainer
                        id="idScrollContainer"
                        focusable="false"
                        height="auto"
                        horizontal="true"
                        vertical="true"
                        width="auto"
                        class="sapUiNoContentPadding"
                    >
                        <content>
                            <Table
                                id="shippingsTable"
                                noDataText="{i18n>noDataText}"
                                items="{/ZRFSFBPCDS0001}"
                                showOverlay="false"
                                mode="SingleSelectMaster"
                                selectionChange="onSelectedItem"

                            >
                                <items>
                                    <ColumnListItem
                                        id="idColumnListItem"
                                        type="Active"
                                    >
                                        <cells>
                                            <core:Icon
                                                id="idIcon"
                                                src="sap-icon://cart-5"
                                                size="2em"
                                            />
                                            <Text
                                                id="idText"
                                                text="{ShippingRequestId}"
                                            />
                                            <ObjectStatus
                                                text="{
                                                    path: 'Status',
                                                    formatter: '.Formatter.shippingStatus'
                                                }"
                                                state="{
                                                    path: 'Status',
                                                    formatter: '.Formatter.shippingState'
                                                }"
                                                id="status100"
                                                icon="{
                                                    path: 'Status',
                                                    formatter: '.Formatter.shippingIcon'
                                                }"
                                            />
                                            <Text
                                                id="idText2"
                                                text="{CustomerId} - {CustomerName}"
                                            />
                                            <Text
                                                id="idText222"
                                                text="{CustomerName}"
                                                wrapping="false"
                                            />
                                            <Text
                                                id="idText4"
                                                text="{PlantOrigin}"
                                            />
                                            <Text
                                                id="idText800"
                                                text="{
                                                    path: 'CreationDate',
                                                    formatter: '.Formatter.dateFormat'
                                                }"
                                            />
                                            <Text
                                                id="idText8"
                                                text="{CreatedBy}"
                                            />
                                        </cells>
                                    </ColumnListItem>
                                </items>
                                <columns>
                                    <Column
                                        id="idColumn"
                                        width="6em"
                                    >
                                        <header>
                                            <Label
                                                id="logo"
                                                text=""
                                            />
                                        </header>
                                    </Column>
                                    <Column
                                        id="idColumn2"
                                        width="12em"
                                    >
                                        <header>
                                            <Label
                                                id="shippingIdColumn"
                                                text="{i18n>ShippingRequestId}"
                                            />
                                        </header>
                                    </Column>
                                    <Column
                                        id="idColumn16"
                                        width="12em"
                                    >
                                        <header>
                                            <Label
                                                id="statusColumn"
                                                text="{i18n>Status}"
                                            />
                                        </header>
                                    </Column>
                                    <Column
                                        id="idColumn3"
                                        width="20em"
                                    >
                                        <header>
                                            <Label
                                                id="CustomerIdColumn"
                                                text="{i18n>Customer}"
                                            />
                                        </header>
                                    </Column>
                                    <Column
                                        id="idColumn333"
                                        visible="false"
                                    >
                                        <header>
                                            <Label
                                                id="CustomerNameColumn"
                                                text="{i18n>CustomerName}"
                                            />
                                        </header>
                                    </Column>
                                    <Column
                                        id="idColumn5"
                                        width="12em"
                                    >
                                        <header>
                                            <Label
                                                id="PlantOriginColumn"
                                                text="{i18n>PlantOrigin}"
                                            />
                                        </header>
                                    </Column>
                                    <Column
                                        id="idColumn8"
                                        width="12em"
                                    >
                                        <header>
                                            <Label
                                                id="creationDateColumn"
                                                text="{i18n>CreationDate}"
                                            />
                                        </header>
                                    </Column>
                                    <Column
                                        id="idColumn10"
                                        width="12em"
                                    >
                                        <header>
                                            <Label
                                                id="createByColumn"
                                                text="{i18n>CreatedBy}"
                                            />
                                        </header>
                                    </Column>
                                </columns>
                            </Table>
                        </content>
                    </ScrollContainer>
                </semantic:content>

            </semantic:SemanticPage>
        </content>
        <footer>
			<OverflowToolbar id="_IDGenOverflowToolbar1">
				<Button
					visible="{popoverModel>/visible}"
					icon="sap-icon://message-popup"
                        id="idButtonMessage"
                        text="{popoverModel>/messageLength}"
                        type="{popoverModel>/type}"
                        press="onMessagesButtonPress"
					ariaHasPopup="Dialog"/>
				<ToolbarSpacer id="_IDGenToolbarSpacer1"/>
				<Button id="changeStatus" type="Accept" icon="sap-icon://journey-change" text="{i18n>btnChangeStatus}" press="onChangeStatus" />
				<Button id="cancelShipping" type="Reject" icon="sap-icon://cancel" text="{i18n>btnCancelShipRequest}" press="onDeleteShippingRequest" />
                <Button id="_IDGenButton3" type="Accept" icon="sap-icon://print" text="{i18n>btnPrint}" press="onPrintForms"/>
			</OverflowToolbar>
		</footer>
    </Page>
</mvc:View>
