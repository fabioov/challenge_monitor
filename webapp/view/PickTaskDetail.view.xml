<mvc:View
	controllerName="br.com.challenge.monitor.challengemonitor.controller.PickTaskDetail"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.uxap"
	xmlns:m="sap.m"
	xmlns:core="sap.ui.core"
	displayBlock="true"
	height="100%"
>
	<ObjectPageLayout
		id="ObjectPageLayout"
		enableLazyLoading="true"
		showTitleInHeaderContent="true"
		upperCaseAnchorBar="false"
	>
		<headerTitle>
			<ObjectPageDynamicHeaderTitle id="_IDGenObjectPageDynamicHeaderTitle1">
				<expandedHeading>
					<m:VBox>
						<m:Title
							id="_IDGenTitle1"
							text="{i18n>pickingTask}"
							wrapping="true"
						/>
						<m:Text
							id="_IDGenSubtitle"
							text="{= ${PickTaskDetail>/PICKING_TASK_ID} ? ${PickTaskDetail>/PICKING_TASK_ID} : ${i18n>ptDhNoPickTask}}"
							wrapping="true"
						/>
					</m:VBox>
				</expandedHeading>
				<snappedHeading>
					<m:FlexBox
						id="_IDGenFlexBox1"
						fitContainer="true"
						alignItems="Center"
					>
						<core:Icon
							id="_IDGenIcon12"
							src="sap-icon://activity-2"
							class="sapUiTinyMarginEnd"
							size="2em"
						/>
						<m:Title
							id="_IDGenText22"
							text="{= ${PickTaskDetail>/PICKING_TASK_ID} ? ${PickTaskDetail>/PICKING_TASK_ID} : ${i18n>ptDhNoPickTask}}"
						/>
					</m:FlexBox>
				</snappedHeading>
				<snappedTitleOnMobile>
					<m:Title
						id="_IDGenTitle3"
						text="{= ${PickTaskDetail>/PICKING_TASK_ID} ? ${PickTaskDetail>/PICKING_TASK_ID} : ${i18n>ptDhNoPickTask}}"
					/>
				</snappedTitleOnMobile>
				<actions>
					<ObjectPageHeaderActionButton
						id="ActionButton0"
						icon="sap-icon://history"
						text="{i18n>ptDhIconHistoryText}"
						tooltip="{i18n>ptDhIconHistoryTooltip}"
						importance="Medium"
						press="openItemHistory"
					/>
					<ObjectPageHeaderActionButton
						id="ActionButton1"
						icon="sap-icon://create"
						text="{i18n>ptDhIconCreateText}"
						tooltip="{i18n>ptDhIconCreateTooltip}"
						importance="Medium"
						visible="{
							path: 'PickTaskDetail>/SHIPPING_REQUEST_STATUS',
							formatter: '.Formatter.statusButtonVisibility'
						}"
						press="onOpenPickingTaskDialog"
					/>
					<ObjectPageHeaderActionButton
						id="ActionButton2"
						icon="sap-icon://restart"
						text="{i18n>ptDhIconRestartText}"
						tooltip="{i18n>ptDhIconRestartTooltip}"
						importance="Medium"
						visible="{
							path: 'PickTaskDetail>/SHIPPING_REQUEST_STATUS',
							formatter: '.Formatter.restartPickTaskVisisibility'
						}"
						press="onOpenPickingTaskDialog"
					/>
					<ObjectPageHeaderActionButton
						id="ActionButton3"
						icon="sap-icon://delete"
						text="{i18n>ptDhIconDeleteText}"
						tooltip="{i18n>ptDhIconDeleteTooltip}"
						type="Reject"
						importance="Medium"
						visible="{
							path: 'PickTaskDetail>/SHIPPING_REQUEST_STATUS',
							formatter: '.Formatter.statusButtonVisibility'
						}"
						press="onOpenPickingTaskDialog"
					/>
					<ObjectPageHeaderActionButton
						id="_IDGenObjectPageHeaderActionButton3ee"
						icon="sap-icon://decline"
						text="{i18n>btnCloseText}"
						importance="Medium"
						tooltip="{i18n>btnCloseTooltip}"
						press="onClosePickTaskDetailView"
					/>
				</actions>
			</ObjectPageDynamicHeaderTitle>
		</headerTitle>
		<headerContent>
			<m:FlexBox
				id="_IDGenFlexBox2"
				wrap="Wrap"
				direction="Column"
			>
				<!-- First Row: Delivery Number -->
				<m:HBox id="HorizontalLayout">
					<m:Text
						id="Label"
						text="{i18n>ptDhDeliveryNr}"
						class="sapUiSmallMarginEnd"
					/>
					<m:Text
						id="idText9000"
						text="{PickTaskDetail>/DELIVERY_NR}"
						class="sapUiSmallMarginEnd"
					/>
				</m:HBox>
				<!-- Second Row: Delivery Item -->
				<m:HBox id="HorizontalLayout2">
					<m:Text
						id="Label2"
						text="{i18n>ptDhDeliveryItem}"
						class="sapUiSmallMarginEnd"
					/>
					<m:Text
						id="idText90002"
						text="{PickTaskDetail>/DELIVERY_ITEM_NR}"
					/>
				</m:HBox>
				<!-- Third Row: Material -->
				<m:HBox id="HorizontalLayout3">
					<m:Text
						id="Label3"
						text="{i18n>ptDhMaterial}"
						class="sapUiSmallMarginEnd"
					/>
					<m:Text
						id="idText90003"
						text="{PickTaskDetail>/MATERIAL_NR}"
					/>
				</m:HBox>
				<m:HBox id="HorizontalLayout001">
					<!-- Status ObjectStatus -->
					<m:ObjectStatus
						text="{= ${PickTaskDetail>/STATUS} === 'Finalizado' ? ${i18n>hdStatusDone} : 
							(${PickTaskDetail>/STATUS} === 'Em Processamento' ? ${i18n>hdStatusProcessing} : 
								(${PickTaskDetail>/STATUS} === '' ? 'N/A' : ${i18n>hdStatusRestarted})
							) }"
						state="{= ${PickTaskDetail>/STATUS} === 'Finalizado' ? 'Success' : ${PickTaskDetail>/STATUS} === 'Em Processamento' ? 'Warning' : 'None'}"
						id="statusStat0001"
						icon="{= ${PickTaskDetail>/STATUS} === 'Finalizado' ? 'sap-icon://message-success' : ${PickTaskDetail>/STATUS} === 'Em Processamento' ? 'sap-icon://lateness' : 'sap-icon://project-definition-triangle' }"
						inverted="true"
						class="sapMObjectStatusLarge"
					/>
				</m:HBox>
			</m:FlexBox>
		</headerContent>
		<sections>
			<ObjectPageSection
				titleUppercase="false"
				title="{i18n>ptSubTitleMaterial}"
			>
				<subSections>
					<ObjectPageSubSection titleUppercase="false">
						<blocks>
							<m:FlexBox
								id="material"
								wrap="Wrap"
								direction="Column"
							>
								<m:HBox
									id="HorizontalLayout6"
									class="sapUiSmallMarginEnd"
								>
									<m:Text
										id="Label6"
										text="{i18n>ptSsMaterial}"
										class="sapUiSmallMarginEnd"
									/>
									<m:Link
										id="idText90006"
										text="{PickTaskDetail>/MATERIAL_NR}"
									/>
								</m:HBox>
								<m:HBox
									id="HorizontalLayout26"
									class="sapUiSmallMarginEnd"
								>
									<m:Text
										id="Label26"
										text="{i18n>ptSsMaterialDescription}"
										class="sapUiSmallMarginEnd"
									/>
									<m:Text
										id="idText900026"
										text="{= ${PickTaskDetail>/MATERIAL_DESCRIPTION} ? ${PickTaskDetail>/MATERIAL_DESCRIPTION} : 'Sem Descrição'}"
									/>
								</m:HBox>
								<m:HBox id="HorizontalLayout36">
									<m:Text
										id="Label36"
										text="{i18n>ptSsQuantity}"
										class="sapUiSmallMarginEnd"
									/>
									<m:ObjectNumber
										id="_IDGenObjectNumber1"
										active="true"
										number="{PickTaskDetail>/QUANTITY}"
										unit="{PickTaskDetail>/QUANTITY_UM}"
									/>
								</m:HBox>
								<m:HBox id="HorizontalLayout366">
									<m:Text
										id="Label366"
										text="{i18n>ptSsGrossWeight}"
										class="sapUiSmallMarginEnd"
									/>
									<m:ObjectNumber
										id="_IDGenObjectNumber16"
										active="true"
										number="{PickTaskDetail>/GROSS_WEIGHT}"
										unit="{PickTaskDetail>/WEIGHT_UM}"
									/>
								</m:HBox>
							</m:FlexBox>
						</blocks>
					</ObjectPageSubSection>
				</subSections>
			</ObjectPageSection>
			<ObjectPageSection
				titleUppercase="false"
				title="{i18n>ptSubTitlePickTask}"
			>
				<subSections>
					<ObjectPageSubSection
						title="{i18n>ptSubTitlePickTask}"
						titleUppercase="false"
						visible="{= ${PickTaskDetail>/PICKING_TASK_ID} ? true : false}"
					>
						<blocks>
							<m:FlexBox
								id="pickinTask"
								wrap="Wrap"
								direction="Column"
							>
								<m:HBox id="HBox12346522">
									<m:Text
										id="Label264522"
										text="{i18n>ptSsPickingTask}"
										class="sapUiSmallMarginEnd"
									/>
									<m:Text
										id="idText9000264522"
										text="{PickTaskDetail>/PICKING_TASK_ID}"
									/>
								</m:HBox>
								<m:HBox id="HBox1234652567">
									<m:Text
										id="Label2645567"
										text="{i18n>ptSsVersion}"
										class="sapUiSmallMarginEnd"
									/>
									<m:Text
										id="idText900026453667"
										text="{PickTaskDetail>/PICKING_TASK_VERSION}"
									/>
								</m:HBox>
								<m:HBox id="HorizontalLayout36890">
									<m:Text
										id="Label36890"
										text="{i18n>ptSsQtyPicked}"
										class="sapUiSmallMarginEnd"
									/>
									<m:ObjectNumber
										id="_IDGenObjectNumber1890"
										active="true"
										number="{PickTaskDetail>/QUANTITY_PICKED}"
										unit="{PickTaskDetail>/TASK_QUANTITY_UM}"
									/>
								</m:HBox>
								<m:HBox id="HorizontalLayout36890123555">
									<m:Text
										id="Label368901213555"
										text="{i18n>ptSsUser}"
										class="sapUiSmallMarginEnd"
									/>
									<m:Text
										id="idText900026452255555555"
										text="{= ${PickTaskDetail>/PICKING_USER} ? ${PickTaskDetail>/PICKING_USER} : ${i18n>ptDhUserNotAssigned}}"
									/>
								</m:HBox>
								<m:HBox
									id="ProgressIndicatorBox"
									width="100%"
								>
									<m:Text
										text="{i18n>ptSsProgress}"
										class="sapUiSmallMarginEnd"
									/>
									<m:ProgressIndicator
										id="piProgressIndicator"
										percentValue="{PickTaskDetail>/quantityProgress}"
										displayValue="{PickTaskDetail>/quantityProgress}"
										state="Success"
										displayOnly="true"
										class="progressIndicator"
									/>
								</m:HBox>
							</m:FlexBox>
						</blocks>
					</ObjectPageSubSection>
				</subSections>
			</ObjectPageSection>
		</sections>
	</ObjectPageLayout>
</mvc:View>